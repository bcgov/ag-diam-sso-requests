{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@lambda-app/*": ["../app/src/*"],
      "@lambda-shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
