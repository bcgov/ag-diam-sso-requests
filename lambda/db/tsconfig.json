{
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": false,
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@lambda-app/*": ["../app/src/*"],
      "@lambda-shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
