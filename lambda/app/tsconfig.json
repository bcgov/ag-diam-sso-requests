{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "rootDir": "../../",
    "baseUrl": "./",
    "paths": {
      "*": ["../../*"],
      "@app/*": ["../../app/*"],
      "@lambda-app/*": ["./src/*"],
      "@lambda-shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
